<div>
<img src="{{podcast.image}}" alt="{{podcast.title}}">
</div>

<h3>{{podcast.title}}</h3>
<h4>{{podcast.publisher}}</h4>
<ul>
    {{#each podcast.episodes}}</ul>
        <li><a href="/episode/{{id}}">{{title}}</a></li>
    {{/each}}
</ul>

{{#if user}}
<form action="/favorite/{{podcast.id}}/add-to-favorites" method="POST">
    <button>Add to favorites</button>
</form>
{{/if}}

{{#if isFavorited}}
<img src="" alt="">
{{else}}
<img src="" alt="">
{{/if}}







